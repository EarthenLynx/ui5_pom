<mvc:View controllerName="sap.ui.demo.basicTemplate.controller.Home" displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Page id="page" title="Pomodoro">
		<content>
			<IconTabBar applyContentPadding="false" stretchContentHeight="true" backgroundDesign="Transparent">
				<items>
					<IconTabFilter design="Vertical" icon="sap-icon://fob-watch" text="Timer">
						<mvc:XMLView viewName="sap.ui.demo.basicTemplate.view.Pomodoro" async="true" />
					</IconTabFilter>
					<IconTabFilter count="{= ${Pomodoro>/history}.length }" design="Vertical" icon="sap-icon://activity-individual" text="Tasks">
						<mvc:XMLView viewName="sap.ui.demo.basicTemplate.view.Tasks" async="true" />
					</IconTabFilter>
					<IconTabFilter design="Vertical" icon="sap-icon://action-settings" text="Settings">
						<mvc:XMLView viewName="sap.ui.demo.basicTemplate.view.Settings" async="true" />
					</IconTabFilter>
				</items>
			</IconTabBar>
		</content>
		<footer>
			<OverflowToolbar id="otbFooter">
				<ToolbarSpacer/>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>