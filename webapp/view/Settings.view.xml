<mvc:View controllerName="sap.ui.demo.basicTemplate.controller.Home" displayBlock="true"
  xmlns="sap.m"
  xmlns:l="sap.ui.layout"
  xmlns:f="sap.ui.layout.form"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core">
  <f:SimpleForm title="Settings" editable="true" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="3" columnsL="2" columnsM="2" singleContainerFullSize="false">
    <f:content>
      <core:Title text="Pomodoro intervals" />

      <!-- { path: 'Pomodoro>/timer/msLeft', formatter: '.formatter.formatMsToMinutes'} -->
      <Label text="Focus interval - {path: 'Pomodoro>/settings/pomodoro/msTotal', formatter: '.formatter.formatMsToMinutes'}" />
      <Slider step="60000" enableTickmarks="true" value="{Pomodoro>/settings/pomodoro/msTotal}" min="0" max="3000000" class="sapUiTinyMarginBottom" />

      <Label text="Short break - {path: 'Pomodoro>/settings/shortBreak/msTotal', formatter: '.formatter.formatMsToMinutes'}" />
      <Slider step="7500" enableTickmarks="true" value="{Pomodoro>/settings/shortBreak/msTotal}" min="0" max="600000" class="sapUiTinyMarginBottom" />


      <Label text="Long break - {path: 'Pomodoro>/settings/longBreak/msTotal', formatter: '.formatter.formatMsToMinutes'}" />
      <Slider step="30000" enableTickmarks="true" value="{Pomodoro>/settings/longBreak/msTotal}" min="0" max="1500000" class="sapUiTinyMarginBottom" />


      <Label text="Min. focus - {path: 'Pomodoro>/settings/minFocus/msTotal', formatter: '.formatter.formatMsToMinutes'}" />
      <Slider step="30000" enableTickmarks="true" value="{Pomodoro>/settings/minFocus/msTotal}" min="0" max="1500000" class="sapUiTinyMarginBottom" />

      <core:Title text="Appearance" />
      <Label text="Enable dark theme" />
      <Switch change="handleSetUserTheme" state="{=${Pomodoro>/settings/appearance/theme} === 'dark' ? true : false}" />

      <core:Title text="Notification" />
      <Label text="Rating" />
      <RatingIndicator value="{Rating}" />
      <Label text="Disposable" />
      <ProgressIndicator percentValue="{Disposable}" />
    </f:content>
  </f:SimpleForm>
</mvc:View>